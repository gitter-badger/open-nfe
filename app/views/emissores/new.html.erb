<div class="col-md-4">
  <%= simple_form_for @emissor, method: :post do |f| %>
    <%= f.input :tipo_de_pessoa_id, collection: TipoDePessoa.all,
      label_method: :nome_por_extenso, value_method: :id %>
    <%= f.input :nome_fantasia %>
    <%= f.input :razao_social %>
    <%= f.input :inscricao_estadual %>
    <%= f.input :inscricao_municipal %>
    <%= f.input :cep %>
    <%= f.input :logradouro %>
    <%= f.input :uf_id, collection: Uf.all,
      label_method: :nome_por_extenso, value_method: :id %>
    <%= f.input :municipio_id, collection: Municipio.all,
      label_method: :nome, value_method: :id %>
    <%= f.input :numero_do_endereco %>
    <%= f.input :complemento %>
    <%= f.input :bairro %>
    <%= f.button :submit, 'Salvar' %>
  <% end %>
</div>
