  </div>

  <div class="col-md-3">
    <div class="form-group">
      <%= f.input :nome_fantasia %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group">
      <%= f.input :razao_social %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group">
      <%= f.input :inscricao_estadual %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group">
        <%= f.input :inscricao_municipal %>
    </div>
  </div>
</div>
